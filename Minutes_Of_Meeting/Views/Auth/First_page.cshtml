<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
<link href="~/css/first-page.css" rel="stylesheet" asp-append-version="true" />

<body class="first-page">
    <div class="mobile-container">
        <div class="logo-area">
            <div class="logo-placeholder">
                <img src="~/img/MERWELL_LOGO-removebg-preview.png" alt="Merwell Logo">
            </div>
        </div>
        <h2 class="welcome-text">Welcome to Merwell</h2>
        <p class="sub-text">Please sign in to continue</p>

        <div class="d-grid gap-3">
            <a asp-controller="Auth" asp-action="Login" class="btn btn-login btn-lg" role="button">Login</a>
            <a asp-controller="Auth" asp-action="Register" class="btn btn-signup btn-lg" role="button">Create Account</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
