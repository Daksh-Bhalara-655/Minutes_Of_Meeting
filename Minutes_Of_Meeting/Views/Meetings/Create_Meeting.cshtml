@{
    ViewData["Title"] = "Schedule New Meeting";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Minutes_Of_Meeting.Models.MeetingsModel

<link rel="stylesheet" href="~/css/create-meeting.css" asp-append-version="true" />

<div class="create-meeting-page container-fluid py-5 px-4">

    <!-- ================= HEADER ================= -->
    <div class="row justify-content-center mb-5">
        <div class="col-lg-10">
            <h2 class="fw-bold text-dark m-0">Schedule New Meeting</h2>
            <p class="text-muted m-0">Create and schedule a new organizational meeting</p>
        </div>
    </div>

    <!-- ================= FORM CARD ================= -->
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card-modern">
                
                <div class="card-header-modern">
                    <h5 class="card-title m-0">
                        <i class="bi bi-calendar-plus me-2"></i>Schedule New Meeting
                    </h5>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <div class="row g-4">
                            
                            <!-- Meeting Type -->
                            <div class="col-md-6">
                                <label asp-for="Meeting_Id" class="form-label">Meeting Type</label>
                                <div class="input-group">
                                    <span class="input-group-text border-end-0"><i class="bi bi-tag"></i></span>
                                    <select  class="form-select border-start-0">
                                        <option selected>-- Select Meeting Type --</option>
                                        <option value="1">Daily Standup</option>
                                        <option value="2">Client Review</option>
                                        <option value="3">Project Kickoff</option>
                                    </select>
                                </div>
                            </div>

                            <!-- Department -->
                            <div class="col-md-6">
                                <label asp-for="Department_ID" class="form-label">Department</label>
                                <div class="input-group">
                                    <span class="input-group-text border-end-0"><i class="bi bi-building"></i></span>
                                    <select class="form-select border-start-0">
                                        <option selected>-- Select Department --</option>
                                        <option value="1">Engineering</option>
                                        <option value="2">Marketing</option>
                                        <option value="3">HR</option>
                                    </select>
                                </div>
                            </div>

                            <!-- Venue -->
                            <div class="col-md-6">
                                <label asp-for="Meeting_Venue_Id" class="form-label">Venue</label>
                                <div class="input-group">
                                    <span class="input-group-text border-end-0"><i class="bi bi-geo-alt"></i></span>
                                    <select class="form-select border-start-0">
                                        <option selected>-- Select Venue --</option>
                                        <option value="1">Conference Room A</option>
                                        <option value="2">Zoom / Online</option>
                                    </select>
                                </div>
                            </div>

                            <!-- Meeting Date & Time -->
                            <div class="col-md-6">
                                <label class="form-label">Meeting Date & Time</label>
                                <div class="input-group">
                                    <span class="input-group-text border-end-0"><i class="bi bi-calendar"></i></span>
                                    <input type="datetime-local" class="form-control border-start-0" placeholder="Select date and time">
                                </div>
                            </div>

                            <!-- Meeting Description -->
                            <div class="col-12">
                                <label class="form-label">Meeting Description</label>
                                <div class="input-group">
                                    <span class="input-group-text border-end-0 align-items-start pt-3"><i class="bi bi-chat-dots"></i></span>
                                    <textarea class="form-control border-start-0" rows="3" placeholder="Enter meeting description and agenda"></textarea>
                                </div>
                            </div>

                            <!-- Meeting Document -->
                            <div class="col-12">
                                <label asp-for="Document_Path" class="form-label"><i class="bi bi-paperclip me-2"></i>Meeting Document (Optional)</label>
                                <input class="form-control" type="file" id="formFile">
                                <div class="form-text mt-2 text-muted">
                                    Upload meeting agenda, minutes, or related documents (PDF, DOC, DOCX, TXT - Max 5MB)
                                </div>
                            </div>

                            <!-- Action Buttons -->
                            <div class="col-12 mt-4 d-flex justify-content-end align-items-center gap-3">
                                <a asp-controller="Meetings" asp-action="Index" class="back-link">
                                    <i class="bi bi-arrow-left"></i> Back to Meetings
                                </a>
                                <button type="submit" class="btn btn-primary-custom">
                                    <i class="bi bi-check-circle me-2"></i>Schedule Meeting
                                </button>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>