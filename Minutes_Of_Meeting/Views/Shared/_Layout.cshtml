@using System
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Minutes_Of_Meeting</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/sideBar.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
</head>
<body>

    <div class="main-wrapper">

        @{
            // determine current route so we can set the active class correctly
            var currentController = ViewContext.RouteData.Values["controller"]?.ToString()?.ToLowerInvariant();
            var currentAction = ViewContext.RouteData.Values["action"]?.ToString()?.ToLowerInvariant();
            Func<string, string, string> navActive = (ctrl, act) =>
            {
                if (string.IsNullOrEmpty(ctrl)) return "";
                var matchCtrl = ctrl.ToLowerInvariant() == currentController;
                var matchAct = string.IsNullOrEmpty(act) ? true : act.ToLowerInvariant() == currentAction;
                return (matchCtrl && matchAct) ? "active" : "";
            };
        }

        <div class="sidebar">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="brand">
                <div class="brand-icon">
                    <img src="~/img/MERWELL_LOGO-removebg-preview.png" alt="Merwell" />
                </div>
                <div>
                    <div style="line-height:1">MOM</div>
                    <small style="font-size:0.7rem; font-weight:400; opacity:0.7;">Management</small>
                </div>
            </a>

            <div class="sidebar-menu">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link @(navActive("Home","Index"))">
                    <i class="fas fa-th-large"></i> Dashboard
                </a>

                <div class="sidebar-header">Master Data</div>
                <a asp-action="Index" asp-controller="MeetingTypes" class="nav-link @(navActive("MeetingTypes", "Index"))"><i class="fas fa-tags"></i> Meeting Types</a>
                <a asp-controller="Department" asp-action="Index" class="nav-link @(navActive("Department","Index"))"><i class="fas fa-building"></i> Departments</a>
                <a asp-controller="MeetingVenue" asp-action="Index" class="nav-link @(navActive("MeetingVenue", "Index"))"><i class="fas fa-map-marker-alt"></i> Venues</a>
                <a asp-controller="Staff" asp-action="Index" class="nav-link @(navActive("Staff", "Index"))"><i class="fas fa-users"></i> Staff Members</a>

                <div class="sidebar-header">Meetings</div>
                <a asp-controller="Meetings" asp-action="Index" class="nav-link @(navActive("Meetings","Index"))">
                    <i class="fas fa-calendar-alt"></i> All Meetings
                </a>
                <a asp-controller="Meetings" asp-action="Create" class="nav-link @(navActive("Meetings","Create"))">
                    <i class="fas fa-plus-circle"></i> Schedule Meeting
                </a>
                <a asp-controller="MeetingAttendance" asp-action="Index" class="nav-link @(navActive("MeetingAttendance", "Index"))"><i class="fas fa-user-check"></i> Attendance</a>

                <div class="sidebar-header">System</div>
                <a asp-area="" asp-controller="Home" asp-action="Privacy" class="nav-link @( (currentController == "home" && currentAction == "privacy") ? "active" : "" )">
                    <i class="fas fa-shield-alt"></i> Privacy
                </a>
            </div>
        </div>

        <button id="sidebarToggle" class="menu-btn" aria-label="Open menu">
            <i class="fas fa-bars"></i>
        </button>

        <main role="main" class="content-area-wrapper">
            @RenderBody()
        </main>

    </div>

    <!-- Footer -->
    <footer class="site-footer" role="contentinfo">
        <div class="site-footer-inner container">
            <div class="footer-left">
                <strong>Marwell Kitchenware PVT.LTD</strong>
                <div class="small">Owner: Sanajay Bhalara</div>
            </div>
            <div class="footer-right text-end">
                <div>Mobile: <a href="tel:+917021248131">7021248131</a></div>
                <div class="small">Since 2010</div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        (function () {
            const sidebar = document.querySelector('.sidebar');
            const content = document.querySelector('.content-area-wrapper');
            const btn = document.getElementById('sidebarToggle');

            if (!sidebar || !content || !btn) return;

            const STORAGE_KEY = 'mom.sidebarCollapsed';

            function setCollapsed(collapsed) {
                if (collapsed) {
                    sidebar.classList.add('collapsed');
                    document.body.classList.add('sidebar-collapsed');
                } else {
                    sidebar.classList.remove('collapsed');
                    document.body.classList.remove('sidebar-collapsed');
                }
                try { localStorage.setItem(STORAGE_KEY, collapsed ? '1' : '0'); } catch(e) { /* ignore */ }
            }

            // initialize based on saved state or screen width
            const saved = localStorage.getItem(STORAGE_KEY);
            if (saved === null) {
                // default: expanded on large screens, collapsed on small screens
                setCollapsed(window.innerWidth <= 1100);
            } else {
                setCollapsed(saved === '1');
            }

            // toggle button shows/hides sidebar
            btn.addEventListener('click', function (e) {
                e.stopPropagation();
                setCollapsed(!sidebar.classList.contains('collapsed'));
            });

            // When user interacts with content (opens another component), collapse sidebar to menu button
            content.addEventListener('click', function () {
                if (!sidebar.classList.contains('collapsed')) {
                    setCollapsed(true);
                }
            });

            // close sidebar on escape
            document.addEventListener('keydown', function (e) {
                if (e.key === 'Escape') setCollapsed(true);
            });

            // on resize: expand if large screen
            window.addEventListener('resize', function () {
                if (window.innerWidth > 1100) setCollapsed(false);
            });
        })();

    </script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>

